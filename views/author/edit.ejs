<h1>Edit Existing Author</h1>

<form method="post" action="/authors/<%= author._id %>?_method=PUT" enctype="multipart/form-data">
    <div>
        <label>Name</label>
    </div>
    <div>
        <input type="text" name="<%= author.name %>" />
    </div>
    <div>
        <label>Bio</label>
    </div>
    <div>
        <textarea name="bio"><%= author.bio%></textarea>
    </div>
    <div>
        <label>Gender</label>
    </div>
    <div>
        <select name="gender" value="<%= author.gender %>">
            <option value="<%= author.gender %>" hidden selected><%= author.gender %></option>
            <option value="male">male</option>
            <option value="female">female</option>
            <option value="non binary">non binary</option>
        </select>
    </div>
    <div>
        <input type="submit" value="Submit Form" />
    </div>
</form>