<h1>Books</h1>

<a href="/books/new">Create New Book</a>
<a href="/authors/new">Create New Author</a>

<% for (book of books) { %>
<div>
    <p>Title: <%= book.title %></p>
    <p>Published: <%= book.published %></p>
    <p>Author:
        <% console.log(book) %>
        <a href="/authors/<%= book.author._id %>"><%= book.author.name %></a></p>
    <a href="/books/<%= book._id %>">Show Details</a> |
    <a onclick="return confirm('Are you sure?')" href="/books/<%= book._id %>?_method=DELETE">Delete Book</a>
</div>
<hr />
<% } %>